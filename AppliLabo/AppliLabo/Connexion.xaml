        <Button x:Name="buttonInscription" Content="Valider" HorizontalAlignment="Left" Margin="920,350,0,0" VerticalAlignment="Top" Width="75" Click="buttonInscription_Click"/>
        <TextBlock x:Name="textBlockError" HorizontalAlignment="Left" Height="43" Margin="750,329,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="156"/>
        <TextBlock HorizontalAlignment="Left" Margin="150,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"><Run Language="fr-fr" Text="Pseudonyme"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="150,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"><Run Language="fr-fr" Text="Mot de passe"/></TextBlock>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="440" Margin="594,50,0,0" Stroke="Black" VerticalAlignment="Top" Width="2"/>




    </Grid>
</Page>
