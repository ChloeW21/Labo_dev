        <Button x:Name="buttonConnexion" Content="Valider" HorizontalAlignment="Left" Margin="220,350,0,0" VerticalAlignment="Top" Width="75" Click="buttonConnexion_Click"/>
        <TextBox x:Name="textBoxPseudo" HorizontalAlignment="Left" Height="23" Margin="900,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"/>
        <TextBox x:Name="textBoxEmail" HorizontalAlignment="Left" Height="23" Margin="900,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"/>
        <PasswordBox x:Name="passwordBoxMdp_Copy" HorizontalAlignment="Left" Height="22" Margin="900,250,0,0" VerticalAlignment="Top" Width="135"/>
        <PasswordBox x:Name="passwordBoxMdpValide" HorizontalAlignment="Left" Height="22" Margin="900,302,0,0" VerticalAlignment="Top" Width="135"/>
        <TextBlock HorizontalAlignment="Left" Margin="750,150,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="750,200,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="750,250,0,0" TextWrapping="Wrap" Text="Mot de Passe" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="750,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"><Run Text="Valider le "/><Run Language="fr-fr" Text="mdp"/></TextBlock>
